@page
@model Week1App.pages.WS1bModel
@{
    Layout = null;
}
@addTagHelper*,Microsoft.AspNetCore.Mvc.TagHelpers

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>WS1b</title>
</head>
<body>

    <form method="post">
        <label for="number1">Number 1</label>
        <input type="number" id="number1" name="number1" />
        @*<button type="submit">Number 1</button>*@

        <label for="number2">Number 2</label>
        <input type="number" id="number2" name="number2" />
        @*<button type="submit">Number 2</button>*@

        <fieldset>
            <legend>Choose one from the list below</legend>
            <input type="radio" name="operation" value="plus" id="plus" /><label for="plus">Plus</label>
            <input type="radio" name="operation" value="minus" id="minus" /><label for="minus">Minus</label>
            <input type="radio" name="operation" value="multiply" id="multiply" /><label for="multiply">Multiply</label>
            <input type="radio" name="operation" value="divide" id="divide" /><label for="divide">Divide</label>
        </fieldset>


        <button type="submit">Press here</button>

    </form>

    <h1>@Model.Message1</h1>

    <h2>@Model.Message2</h2>

</body>
</html>
